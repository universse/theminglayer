---
// this can be generated from token files with a custom plugin
export interface ButtonVariants {
  intent?: 'primary' | 'critical'
  visual?: 'filled' | 'outline'
  disabled?: boolean
}

type Props = ButtonVariants

const {
  intent = `primary`,
  visual = `filled`,
  disabled = false,
  ...props
} = Astro.props
---

<button
  class='tl-button'
  data-intent={intent}
  data-visual={visual}
  disabled={disabled}
  type='button'
  {...props}
>
  <span class='tl-button-label'> <slot /></span>
</button>
