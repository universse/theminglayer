{
  component: {
    icon: {
      $variant: {
        size: {
          xs: {
            $value: '[data-size="xs"]',
          },
          sm: {
            $value: '[data-size="sm"]',
          },
          md: {
            $value: '[data-size="md"]',
          },
          lg: {
            $value: '[data-size="lg"]',
          },
          xl: {
            $value: '[data-size="xl"]',
          },
        },
      },
      size: {
        $set: [
          { $variant: { size: 'xs' }, $value: '{size.icon.xs}' },
          { $variant: { size: 'sm' }, $value: '{size.icon.sm}' },
          { $variant: { size: 'md' }, $value: '{size.icon.md}' },
          { $variant: { size: 'lg' }, $value: '{size.icon.lg}' },
          { $variant: { size: 'xl' }, $value: '{size.icon.xl}' },
        ],
      },
    },
  },
}
