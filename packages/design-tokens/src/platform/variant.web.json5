{
  variant: {
    hover: {
      $value: ':is(:hover, [data-hovered="true"])',
    },
    pressed: {
      $value: ':is(:active, [data-pressed="true"])',
    },
    focus: {
      $value: ':is(:focus, [data-focused="true"])',
    },
    focus_within: {
      $value: ':focus-within',
    },
    focus_visible: {
      $value: ':is(:focus-visible:not([data-focused="true"]), [data-focus-visible="true"])',
    },
    selected: {
      $value: ':is([data-selected="true"], [aria-selected="true"])',
    },
    enabled: {
      $value: ':enabled',
    },
    disabled: {
      $value: ':is(:disabled, [disabled], [data-disabled="true"])',
    },
    pending: {
      $value: '[data-pending="true"]',
    },
    interactive: {
      $value: ':not(:disabled, [disabled], [data-disabled="true"])',
    },
    non_interactive: {
      $value: ':is(:disabled, [disabled], [data-disabled="true"], [data-pending="true"])',
    },

    valid: {
      $value: ':valid',
    },
    invalid: {
      $value: ':invalid',
    },
    input_valid: {
      $value: ':user-valid',
    },
    input_invalid: {
      $value: ':user-invalid',
    },
    read_only: {
      $value: ':is(:read-only, [readonly], [aria-readonly="true"])',
    },

    horizontal: {
      $value: '[data-orientation="horizontal"]',
    },
    vertical: {
      $value: '[data-orientation="vertical"]',
    },

    // :lang, :dir
  },
}
