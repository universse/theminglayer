{
  variant: {
    hover: {
      $value: ':is(:hover, [data-hovered])',
    },
    active: {
      $value: ':is(:active, [data-pressed])',
    },
    focus: {
      $value: ':focus',
    },
    focus_within: {
      $value: ':focus-within',
    },
    focus_visible: {
      $value: ':is(:focus-visible, [data-focus-visible])',
    },
    enabled: {
      $value: ':enabled',
    },
    disabled: {
      $value: ':is(:disabled, [disabled], [aria-disabled="true"])',
    },
    invalid: {
      $value: ':invalid',
    },
    input_invalid: {
      $value: ':user-invalid',
    },
    pending: {
      $value: ':is([data-pending="true"], [aria-busy="true"])',
    },
    readonly: {
      $value: ':is(:read-only, [aria-readonly="true"])',
    },
  },
}
